      <span class ="error" id="name_error"><%= @name_error %></span><br>
      <label for="reason">Reason:</label>
      <textarea id="reason" name="reason" value="<% =params[:reason] %></textarea><br>
      <span class="error" id="reason_error"><%= @reason_error %></span><br>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<% =params[:name] %>"><br>
      <span class="error" id="email_error"><%= @email_error %></span><br>
      <input type="submit" value="Submit">
    </form>

  </body>
</html>